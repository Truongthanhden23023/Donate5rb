local button = script.Parent  -- Lấy nút
local gamePassID = 909103171  -- Thay bằng ID Game Pass của bạn

-- Lắng nghe sự kiện nhấn nút
button.MouseButton1Click:Connect(function()
    -- Kiểm tra nếu người chơi chưa sở hữu Game Pass
    local player = game.Players.LocalPlayer
    local marketplace = game:GetService("MarketplaceService")
    
    -- Hiển thị bảng mua Game Pass
    marketplace:PromptGamePassPurchase(player, gamePassID)
end)
